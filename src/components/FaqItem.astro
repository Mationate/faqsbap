---
interface Props {
  id: string;
  question: string;
  answer: string;
  regions?: string[];
  relatedArticles?: string[];
  isOfficial?: boolean;
}

const { id, question, answer, regions, relatedArticles, isOfficial } = Astro.props;
---
<details
  class="faq-item group border border-gray-200 rounded-xl bg-white hover:border-bosque-200 transition-colors"
  data-question-id={id}
>
  <summary class="flex items-start gap-3 p-5 select-none">
    <svg class="faq-chevron w-5 h-5 text-bosque-500 mt-0.5 shrink-0 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
    </svg>
    <div class="flex-1 min-w-0">
      <div class="flex flex-wrap items-center gap-2">
        <h3 class="text-base font-semibold text-gray-800 group-open:text-bosque-700 transition-colors faq-question-text">
          {question}
        </h3>
        {isOfficial && (
          <span class="badge-oficial shrink-0">
            <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            Respuesta oficial
          </span>
        )}
      </div>
    </div>
  </summary>
  <div class="faq-answer">
    <div class="px-5 pb-5">
      <div class="border-t border-gray-100 pt-4 ml-8">
        <p class="text-gray-600 leading-relaxed faq-answer-text">{answer}</p>

        {(relatedArticles && relatedArticles.length > 0) && (
          <div class="mt-4 flex flex-wrap gap-2">
            {relatedArticles.map(article => (
              <span class="inline-flex items-center px-2.5 py-1 rounded-md bg-bosque-50 text-bosque-700 text-xs font-medium">
                ðŸ“„ {article}
              </span>
            ))}
          </div>
        )}

        {(regions && regions.length > 0) && (
          <div class="mt-3">
            <p class="text-xs text-gray-400 mb-1.5">Pregunta levantada en:</p>
            <div class="flex flex-wrap gap-1.5">
              {regions.map(region => (
                <span class="inline-block px-2 py-0.5 rounded-full bg-gray-100 text-gray-500 text-xs">
                  {region}
                </span>
              ))}
            </div>
          </div>
        )}
      </div>
    </div>
  </div>
</details>
