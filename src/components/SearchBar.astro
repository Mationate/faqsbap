<div class="relative w-full max-w-2xl mx-auto">
  <div class="relative">
    <svg class="absolute left-4 top-1/2 -translate-y-1/2 w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
    </svg>
    <input
      type="search"
      id="faq-search"
      placeholder="Buscar preguntas... ej: remuneraciones, guardaparques, fiscalización"
      class="w-full pl-12 pr-12 py-4 rounded-xl border-2 border-gray-200 bg-white text-gray-800 placeholder-gray-400 focus:border-bosque-400 focus:ring-4 focus:ring-bosque-100 focus:outline-none transition-all text-base shadow-sm"
      autocomplete="off"
    />
    <button
      id="search-clear"
      class="absolute right-4 top-1/2 -translate-y-1/2 w-6 h-6 rounded-full bg-gray-200 text-gray-500 hover:bg-gray-300 flex items-center justify-center transition-colors hidden"
      aria-label="Limpiar búsqueda"
    >
      <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
      </svg>
    </button>
  </div>
  <div id="search-status" class="mt-2 text-sm text-gray-500 text-center hidden"></div>
</div>
